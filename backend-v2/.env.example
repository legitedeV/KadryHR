DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kadryhr?schema=public"
APP_PORT=4000
DATABASE_MAX_RETRIES=5
DATABASE_RETRY_DELAY_MS=2000
PUBLIC_BASE_URL="https://kadryhr.pl"

# JWT configuration
JWT_ACCESS_SECRET="changeme-access"
JWT_REFRESH_SECRET="changeme-refresh"
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL="7d"

# OAuth configuration
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID="common"

# Redis configuration (optional - for background jobs/queue)
REDIS_ENABLED="true"
REDIS_HOST="localhost"
REDIS_PORT=6379

# SMTP configuration (optional - for email notifications)
# Leave empty to disable email notifications
EMAIL_ENABLED="true"
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""
SMTP_SECURE="false"

# Marketing leads (optional)
LEADS_DEFAULT_ORGANISATION_ID=""
LEADS_NOTIFICATION_EMAIL=""
LEADS_AUTO_REPLY_ENABLED="true"
LEADS_IP_HASH_SALT="kadryhr-leads"

# SMS configuration (optional - for SMS notifications)
# Set SMS_ENABLED="true" to enable SMS notifications
SMS_ENABLED="false"
SMS_PROVIDER="console"
# Twilio configuration (when SMS_PROVIDER="twilio")
SMS_ACCOUNT_SID=""
SMS_AUTH_TOKEN=""
SMS_FROM_NUMBER=""
